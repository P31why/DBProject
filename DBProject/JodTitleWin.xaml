<Window x:Class="DBProject.JodTitleWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBProject"
        mc:Ignorable="d"
        Title="JodTitleWin" Height="450" Width="352">
    <Grid>
        <StackPanel Margin="48,53,48,53">
            <Label Content="Добавление новой должности" Margin="50,0,0,0"/>
            <Label Content="Название" HorizontalAlignment="Left" Margin="13,20,45,0" VerticalAlignment="Top"/>
            <TextBox x:Name="TitleText" TextWrapping="Wrap" Text="" Width="224"/>
            <Button Content="Добавить" Width="148" Height="24" Margin="0,35,0,0" Click="AddNewJobTitle_Click"/>
            <Button Content="Закрыть окно" Width="148" Height="24" Margin="0,15,0,0" Click="Button_Click"/>

        </StackPanel>
    </Grid>
</Window>
